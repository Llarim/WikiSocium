extends BaseWidget

block content
  script(type="text/javascript")
    YUI().use('inputex', 'inputex-radio'
    , function(Y) 
    {
    step#{step_id}FieldsList['#{widget.id}'] = new Y.inputEx.RadioField({name: 'step#{step_id}_#{widget.id}', display: 'vertically', choices: !{JSON.stringify(widget.value_list)}, value: '#{value}', required:false, parentEl: 'step_#{step_id}_widget_#{widget.id}_wrapper'});
    step#{step_id}FieldsList['#{widget.id}'].on('updated', function(value)
    {
     OnWidgetChanged();
    });
    });
