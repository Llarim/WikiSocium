  div(class="userFullName")
   #{userData.fullName}

  div(class="userStuff")
    div= userData.id
    div= userData.cases.length

  #cases
    h2 Активные дела
    - each aCase in userData.cases
      - if (aCase.state == 'active')
        !=partial('aCase', {user:userData.id, aCase:aCase.caseId})
      
    h2 Завершенные дела
    - each aCase in userData.cases
      - if (aCase.state == "completed")
        !=partial('aCase', {user:userData.id, aCase:aCase.caseId})
   
